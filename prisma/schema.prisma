generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum ProjectMode {
  TEXT
  IMAGE
  CODE
  CHAT
}

enum ExportType {
  JSON
  PDF
  DOCX
  MARKDOWN
  HTML
  ZIP
  IMAGE_FILE
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          Role      @default(USER)

  stripeCustomerId   String? @unique
  autoTopUpThreshold Int     @default(2000)

  // MONEY ENGINE
  plan            String  @default("FREE")
  creditsBalance  Int     @default(50)
  monthlyCredits  Int     @default(50)
  autoTopUp       Boolean @default(false)
  autoTopUpAmount Int     @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  accounts       Account[]
  sessions       Session[]
  projects       Project[]
  exports        Export[]
  subscription   Subscription?
  usage          Usage[]
  generationLogs GenerationLog[]
  projectExports ProjectExport[]
  creditLedger   CreditLedger[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Project {
  id        String      @id @default(cuid())
  userId    String
  mode      ProjectMode
  category  String      @default("GENERAL")
  title     String?
  prompt    String
  input     Json?
  result    Json?
  provider  String?
  model     String?
  tokensIn  Int?        @default(0)
  tokensOut Int?        @default(0)
  costUsd   Float?      @default(0)
  status    String      @default("PREVIEW")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user           User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  exports        Export[]
  projectExports ProjectExport[]
}

model Export {
  id        String @id @default(cuid())
  userId    String
  projectId String

  type      ExportType
  fileName  String?
  mimeType  String?
  sizeBytes Int?
  blobUrl   String?
  content   Json?

  createdAt DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([projectId, createdAt])
}

model Subscription {
  id     String @id @default(cuid())
  userId String @unique

  stripeSubscriptionId String?   @unique
  stripePriceId        String?
  status               String    @default("inactive")
  currentPeriodEnd     DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Usage {
  id     String @id @default(cuid())
  userId String
  period String

  generations Int @default(0)
  tokensIn    Int @default(0)
  tokensOut   Int @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, period])
}

model GenerationLog {
  id        String  @id @default(cuid())
  userId    String
  projectId String?

  mode      ProjectMode
  category  String
  provider  String?
  model     String?
  tokensIn  Int?        @default(0)
  tokensOut Int?        @default(0)
  costUsd   Float?      @default(0)
  ok        Boolean     @default(false)
  error     String?

  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
}

model ProjectExport {
  id        String @id @default(cuid())
  userId    String
  projectId String

  filename String
  mimeType String
  data     Bytes
  size     Int

  createdAt DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([projectId, createdAt])
}

enum CreditTxType {
  PURCHASE
  SUBSCRIPTION_GRANT
  USAGE
  ADJUSTMENT
  REFUND
}

model CreditLedger {
  id              String       @id @default(cuid())
  userId          String
  type            CreditTxType
  amount          Int // +credits added, -credits spent
  memo            String?
  stripeEventId   String?
  stripeSessionId String?
  createdAt       DateTime     @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([stripeEventId])
  @@index([userId, createdAt])
}
